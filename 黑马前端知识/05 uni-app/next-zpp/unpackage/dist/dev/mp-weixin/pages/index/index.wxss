.carousel{
	width: 100%;
	height:300rpx;
}
/*热门超英start*/
.super-hot{
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper{
	display: flex;
	flex-direction: row;
}
.hot-ico{
	width: 30rpx;
	height: 30rpx;
	margin-top: 15rpx;
}
.hot-title{
	font-weight: bold;
	font-size: 18px;
	margin-left: 20rpx;
}
.hot{
	width: 100%;
	white-space:nowrap ;/*不换行*/
}
.single-poster{
	display: inline-block;
	margin-left: 20rpx;
}
.poster-warpper{
	display: flex;
	flex-direction: column;
}
.poster{
	width: 200rpx;
	height: 230rpx;
}
.movie-name{
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 14px;
	font-weight: bold;
	/*name超出则省略*/
	white-space: nowrap;
	overflow: hidden;
text-overflow: ellipsis;
}
.movie-scroe-wapper{
	width: 200rpx;
	display: flex;
}
.star-icon{
	margin-top: 8rpx;
	width: 25rpx;
	height: 25rpx;
}
.movie-score{
	margin-left: 6rpx;
	font-size: 12px;
}

